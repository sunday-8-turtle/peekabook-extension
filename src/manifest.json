{
  "name": "피카북(Peekabook)",
  "description": "언제 어디서나 사용 가능한 북마크 서비스",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.peekabook.work/*"
    ]
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "16x16_비활성.png"
    }
  },
  "icons": {
    "16": "16x16_비활성.png",
    "48": "48x48.png",
    "128": "128x128.png"
  }
}
